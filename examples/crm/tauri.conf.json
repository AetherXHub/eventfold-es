{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EventFold CRM",
  "version": "0.1.0",
  "identifier": "com.aetherxhub.eventfold-crm",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "./dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "EventFold CRM",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "capabilities": ["main-capability"]
    }
  }
}
